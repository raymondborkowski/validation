{
        "manifest_version": 2,
        "name": "Intent Media Integration Validator",
        "description": "This extension validates the Intent Media integration.",
        "version": "1.2",
        "background": {
                "persistent": true,
                "scripts": ["js/jquery.js","background.js"]
        },
        "browser_action": {
                "default_icon": "default_icon.png",
                "default_popup": "index.html"
        },
        "web_accessible_resources": ["validator.js","myFunc.js","background.js"] ,
       "content_scripts": [
          {
            "matches": ["http://*/*","https://*/*"],
            "js": ["content-script.js"],
            "run_at": "document_end"
          }
        ],
        "icons":
        {
              "128": "default_icon.png",
              "16": "default_icon.png",
              "48": "default_icon.png"
        },
        "permissions": ["webRequest", "activeTab", "storage", "http://*/", "https://*/"]

}
